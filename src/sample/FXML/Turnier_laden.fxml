<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="holderPane" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.FXML.Turnier_ladenController">
   <children>
      <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="275.0" vgrow="SOMETIMES" />
            <RowConstraints />
        </rowConstraints>
         <children>
            <TableView fx:id="TurnierlisteTabelle" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.rowSpan="2">
              <columns>
                <TableColumn fx:id="TurnierDatumSpalte" minWidth="150.0" prefWidth="97.0" text="Datum" />
                <TableColumn fx:id="TurnierNameSpalte" minWidth="450.0" prefWidth="450.0" text="Turniername" />
                  <TableColumn fx:id="TurnierIDSpalte" minWidth="0.0" prefWidth="0.0" text="Column X" visible="false" />
              </columns>
            </TableView>
            <Text fx:id="t_TurnierLaden" strokeType="OUTSIDE" strokeWidth="0.0" text="Turnier laden" GridPane.columnSpan="2" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" GridPane.rowIndex="1">
               <children>
                  <JFXButton fx:id="btn_neuesTurnier" onAction="#pressBtn_neuesTurnier" text="Neues Turnier" textFill="#757575">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="#757575" glyphName="USERS" size="20" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <JFXTextField fx:id="t_turniersuche" styleClass="font" stylesheets="@../CSS/custom.css" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</StackPane>
